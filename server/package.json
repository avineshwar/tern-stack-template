{
  "name": "tern-template-server",
  "version": "0.1.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean && npm install",
    "build": "npx tsc",
    "postbuild": "npm run setup",
    "setup": "npx ts-node ./scripts/setup.ts",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "predev": "npm run setup",
    "dev": "npx nodemon"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts",
    "ignore": [
      "**/test/**",
      "**/docs/**"
    ],
    "delay": 2500,
    "exec": "npx ts-node ./src/index.ts"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^18.16.1",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  }
}
